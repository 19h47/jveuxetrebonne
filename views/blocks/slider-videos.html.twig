<div id="slider-videos" class="Slider-videos page-block" data-node-type="SliderVideos">

	{% spaceless %}
		<ul class="items js-container">
			{% for post in posts %}
				<li class="item">
					{% include 'components/list-post.html.twig' with { video: true } %}
				</li>
			{% endfor %}
		</ul>
	{% endspaceless %}

	<button type="button" class="previous js-previous"></button>
	<button type="button" class="next js-next"></button>

</div>
