{#
	/**
	 * /views/pages/category-viedos
	 */
#}
{% extends 'index.twig' %}

{% block content %}
	
	{{ parent() }}

	{# Player controls #}
	{% include 'partials/plyr.svg' %}
	
	<div class="Category-header l-container">
		<div class="row">
			<div class="col-xs-12 col-md-1">
				<div class="Header-logo">
					{% include 'components/header-logo.twig' %}
				</div>
			</div>
			<div class="col-xs-12 col-md-10 col-md-offset-1">
				<ul class="Menu" role="navigation">
					{% 
						include 'components/menu.twig' 
						with { 
							'menu' : menu.categories,
							'language': true,
							'search': true,
							'layout': {
								'desktop': true,
								'marker': true
							}
						} 
					%}
				</ul>
			</div>
		</div>
	</div>	
	
	{% include 'components/heading.twig' with { 'title': category.description  } %}

	<div class="l-container">
		
		{% 
			include 'partials/load-more.twig'
			with {
				'post_template_name': 'list',
				'load_more_label': pll__( "Afficher plus d'article" ),
				'video': true
			}
		%}

	</div>

	{# {{ slider_videos }} #}


	{% include 'partials/instagram.twig' %}

{% endblock %}