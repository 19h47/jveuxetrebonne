{#
	/**
	 * /views/pages/front-page
	 */
#}
{% extends 'index.twig' %}

{% block content %}
	
	{{ parent() }}

	{# Banner #}
	{% include 'components/banner.twig' %}

	{# Player controls #}
	{% include 'partials/plyr.svg' %}


	<div class="Front-page-header">
		<div class="l-container">

			
			<button class="Menu-search-button js-search-button">
			    <svg class="Icon magnifying-glass">
			        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{ theme.link }}/dist/svg/icons.svg#magnifying-glass"></use>
			    </svg>
			</button>
			
			<button class="Menu-button js-toggle-menu-button hidden-md hidden-lg hidden-hd"></button>

			<div class="row">
				<div class="col-xs-4 col-xs-offset-4 col-md-offset-0 col-md-1">
					<div class="Header-logo">
						{% include 'components/header-logo.twig' %}
					</div>
				</div>
				<div class="col-xs-12 col-md-10 col-md-offset-1">


					<ul class="Menu" role="navigation">
						{% 
							include 'components/menu.twig' 
							with { 
								'menu' : menu.categories,
								'language': true,
								'search': true,
								'layout': {
									'desktop': true,
									'marker': true
								}
							} 
						%}
					</ul>
				</div>
			</div>
		</div>
	</div> 	
	
	<div class="l-container">
		<div class="Sticky-posts">
			{{ sticky_post }}
		</div>
	</div>


	{{ slider_videos }}

	
	{% include 'components/heading.twig' with { 'title': pll__( 'DÃ©couvrir les articles') } %}

	
	<div class="l-container">
		
		{% 
			include 'partials/load-more.twig'
			with {
				'post_template_name': 'tease',
				'load_more_label': pll__( "Charger plus d'article" )
			}
		%}

	</div>

	{% include 'partials/instagram.twig' %}

{% endblock %}