<div class="Single-header{{ post.color_header ? ' color-black' : ' color-white' }}">
	<div class="l-container">
		<div class="row d-flex align-items-center">
			<div class="col-4 d-md-none">
				<button type="button" class="Menu-search-button js-search-button">
					{% include 'svg/use.html.twig' with { icon: 'magnifying-glass', classes: [ 'Icon', 'magnifying-glass' ] } %}
				</button>
			</div>
			<div class="col-4 col-md-1">
				<div class="Header-logo">
					{% include 'components/header-logo.twig' %}
				</div>
			</div>
			<div class="col-4 col-md-10 offset-md-1">
				<ul class="Menu d-flex align-items-center" role="navigation">
					{%
						include 'components/menu.twig'
						with {
							menu: menu.categories,
							language: true,
							search: true,
							layout: {
								desktop: false,
								single: true
							}
						}
					%}
				</ul>
			</div>
		</div>
	</div>
</div>
