<article class="List-post js-load-more-post{{ video ? ' List-post-category-videos js-category-videos' }}{{ relationship ? ' List-post-relationship' }}">
	
		{% if video %}
		
			<div class="thumbnail js-category-video" data-type="youtube" data-video-id="{{ function( 'get_field', 'videos', post, false ) }}"></div>
		
		{% else %}
			<a class="link" href="{{ post.link }}">		

				<img class="thumbnail" src="{{ post.thumbnail }}">
			</a>
		{% endif %}

	

	{% spaceless %}
		
	<div class="List-post-meta">
		
		{# Date #}
		<p class="date">{{- post.date -}}</p>
	 	

	 
	 	<span class="display-xs-inline-block">&nbsp;&bull;&nbsp;</span>
	 	
		
		{# Categories #}
	 	<em class="categories">{{- post.categories | join( ', ' ) | replace( post.name, '' ) -}}</em>
		

		{# Link #}
		{{ video ? '' : '<a class="link" href="{{ post.link }}" title="{{ post.title }}">' }}
			<h3 class="title">{{- post.title -}}</h3>
		{{ video ? '' : '</a>' }}
	
	</div>
	{% endspaceless %}
	
</article>