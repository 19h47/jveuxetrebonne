<article class="Tease-post js-load-more-post">
    <div class="Tease-post-inner">
		<a href="{{ post.link }}" aria-label="{{ post.title }}">
			{% if post.thumbnail %}
        		<img class="thumbnail" src="{{ Image( post.thumbnail ).src }}" alt="{{ Image( post.thumbnail ).alt | default( post.title ) }}" width="{{ Image( post.thumbnail ).width }}" height="{{ Image( post.thumbnail ).height }}"/>
			{% endif %}
		</a>

        {# Header #}
        <header class="Tease-post-header">
            <div class="Tease-post-header__meta">
                <p class="date">
                    {{- pll__( 'Publié le' ) -}}&nbsp;{{- post.date -}}
                </p>

                <span class="d-inline-block font-title">&nbsp;&bull;&nbsp;</span>
                <p class="category"><em class="lowercase">{{- post.categories -}}</em></p>
            </div>
            <h2 class="title">
				<a href="{{ post.link }}">{{- post.title | raw -}}</a>
			</h2>
        </header>
    </div>
</article>
