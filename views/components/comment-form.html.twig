<section class="Respond" id="respond">
    {# <pre>{{ post|print_r}}</pre> #}
    {% if post.comment_status == 'open' %}

        <form action="{{ site.url }}/wp-comments-post.php" method="post" id="commentform">
            {% apply spaceless %}

	            <input
					aria-label="{{ pll__( 'Ton nom et prénom' ) }}"
	                class="author"
	                type="text"
	                name="author"
	                id="author"
	                value=""
	                aria-required="true"
	                placeholder="{{- pll__( 'Ton nom et prénom' ) -}}"
	            />

	            <input
					aria-label="{{ pll__( 'N\'oublie pas ton email' ) }}"
	                class="email"
	                type="text"
	                name="email"
	                id="email"
	                value=""
	                aria-required="true"
	                placeholder="{{- pll__( 'N\'oublie pas ton email' ) -}}"
	            />


	            <input
					aria-label="{{- pll__( 'Une adresse web ?' ) -}}"
	                class="url"
	                type="text"
	                name="url"
	                id="url"
	                value=""
	                size="22"
	                placeholder="{{- pll__( 'Une adresse web ?' ) -}}"
	            >

	            <textarea
	            	aria-label="{{- pll__( 'Aller n\'hésite pas, lâche un com' ) -}}"
	                class="comment"
	                name="comment"
	                id="comment"
	                placeholder="{{- pll__( 'Aller n\'hésite pas, lâche un com' ) -}}"
	            ></textarea>

	            <p class="submit">
	                <button
	                    type="submit"
	                    id="submit"
	                >
	                    <span>{{- pll__( 'Envoyer mon message' ) -}}</span>
	                </button>
	            </p>

	            {# <p class="cancel cancel-comment-reply">
	                {{- fn( 'cancel_comment_reply_link' ) -}}
	            </p> #}

            {% endapply %}

            {{ fn( 'comment_id_fields' ) }}

            {% do action( 'comment_form', post.id ) %}

        </form>

    {% endif %}

</section>
